      <div id="redirection" class="center-align col s12 m12 l12"><i class="large material-icons">trending_down</i>
      </div>
      </div>

      <div id="map" class="map"><div class="center-align" id="redirection2" style="height: 15vh;z-index: 8796"><i class="large material-icons">trending_up</i></div></div>
        
        <script type="text/javascript">
          var map = new ol.Map({
            target: 'map',
            layers: [
              new ol.layer.Tile({
                source: new ol.source.OSM()
              })
            ],
            view: new ol.View({
              center: ol.proj.fromLonLat([7.7455300, 48.5839200]),
              zoom: 13
            })
          });
          $(document).ready( function () {
             $('#redirection').click(function() {
               $('html,body').animate({scrollTop: $("#map").offset().top}, 'slow'      );
             });  
             $('#redirection2').click(function() {
               $('html,body').animate({scrollTop: $("#monancre").offset().top}, 'slow'      );
             }); 
          })
        </script>
        